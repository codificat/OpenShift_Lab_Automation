<%= form_for @lab, :html => {:role => "form"} do |f| %>
  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <%= f.label "Name", :class => "control-label" %>
          <%= f.text_field :name, :class => "form-control", :placeholder => "Lab Environment Name" %>
      </div>
      <div class="form-group">
        <%= f.label "Region", :class => "control-label" %><br>
          <%= f.text_field :geo, :class => "form-control", :placeholder => "RDU" %>
      </div>
      <div class="form-group">
        <%= f.label "Controller Host", :class => "control-label" %>
          <%= f.text_field :controller, :class => "form-control", :placeholder => "10.10.73.6" %>
      </div>
      <div class="form-group">
        <%= f.label "Username", :class => "control-label" %>
          <%= f.text_field :username, :class => "form-control", :placeholder => "admin" %>
      </div>
      <div class="form-group">
        <%= f.label "Password", :class => "control-label" %>
          <%= f.password_field :password, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Auth Tenant", :class => "control-label" %>
          <%= f.text_field :auth_tenant, :class => "form-control", :placeholder => "admin" %>
      </div>
      <div class="form-group">
        <%= f.label "API Auth URL", :class => "control-label" %>
          <%= f.text_field :api_url, :class => "form-control", :placeholder => "http://10.10.73.6:5000/v2.0/" %>
      </div>
      <div class="form-group">
        <%= f.label "Nameservers (comma seperated list)", :class => "control-label" %>
          <%= f.text_field :nameservers, :class => "form-control", :value => "10.11.5.3,10.11.5.4" %>
      </div>
      <div class="form-group">
        <%= f.label "Allowed instances for each environment", :class => "control-label" %>
          <%= f.text_field :default_quota_instances, :class => "form-control", :value => "15" %>
      </div>
      <div class="form-group">
        <%= f.label "Allowed CPU cores for each environment", :class => "control-label" %>
        <%= f.text_field :default_quota_instances, :class => "form-control", :value => "45" %>
      </div>
      <div class="form-group">
        <%= f.label "Allowed RAM for each environment (in megabytes)", :class => "control-label" %>
          <%= f.text_field :default_quota_instances, :class => "form-control", :value => "30720" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="well well-small">
        <h4 class="text-center">All fields required</h4>
        <p class="lead">
          <ul>
            <li>Name can be anything.</li>
            <li>Controller Host should be an ip or FQDN.</li>
            <li>Username is the administrative tenant user username.</li>
            <li>Api Auth URL can be found in auto-generated keystonrc files.</li>
          </ul>
        </p>
      </div>
    </div><!-- col-md-4 --!>
  </div> <!-- Row --!>
  <%= f.submit 'Submit Lab', :class => "btn btn-primary" %>
<% end %>
