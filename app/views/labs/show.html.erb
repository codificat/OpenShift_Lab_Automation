<h1>OpenStack Lab System: <%= @lab.name %></h1>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-11">
        <h3 class="panel-title">Details</h3>
      </div>
      <div class="col-md-1">
        <a href="/labs/<%= @lab.id %>/edit" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>Host</dt>
      <dd><%= @lab.controller %></dd>
      <dt>Region</dt>
      <dd><%= @lab.geo %></dd>
      <dt>Username</dt>
      <dd><%= @lab.username %></dd>
      <dt>API URL</dt>
      <dd><%= @lab.api_url %></dd>
      <dt>Password</dt>
      <dd><%= @lab.password %></dd>
      <dt>Default tenant</dt>
      <dd><%= @lab.auth_tenant %></dd>
      <dt>Created at</dt>
      <dd><%= @lab.created_at %></dd>
    </dl>
  </div>
</div>
<br>
<h2>Projects (OpenShift Lab Environments)</h2>
<% if @lab.projects.empty? %>
  <p class="text-center">No Projects exist! Create one!</p>
<% end %>
